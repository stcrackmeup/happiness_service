		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<version>1.5</version>
				<executions>
					<execution>
						<id>add-acceptancetest-source</id>
						<phase>generate-source</phase>
						<goals>
							<goal>add-test-source</goal>
						</goals>						
						<configuration>
							<sources>
							<source>${basedir}${acceptancetest.path}</source>
